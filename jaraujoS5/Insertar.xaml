<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jaraujoS5.Insertar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="INSERTAR ESTUDIANTE" FontSize="20" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo" Keyboard="Numeric" ></Entry>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"  ></Entry>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"  ></Entry>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad" Keyboard="Numeric" ></Entry>
            <Button x:Name="btnInsertar" Text="INGRESAR" Clicked="btnInsertar_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>